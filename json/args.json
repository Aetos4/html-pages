{
  "options": [
    {
      "name": "port",
      "alias": "p",
      "description": "Port to listen on",
      "defaultValue": 8084,
      "type": "Number",
      "typeLabel": "number",
      "validations": "isNumber",
      "show": true
    },
    {
      "name": "root",
      "alias": "r",
      "description": "The root directory",
      "type": "String",
      "defaultValue": "./",
      "defaultOption": true,
      "multiple": true
    },
    {
      "name": "cache",
      "alias": "c",
      "description": "Time in milliseconds for caching files in the browser",
      "defaultValue": 3600,
      "type": "Number",
      "typeLabel": "number",
      "validations": "isNumber",
      "show": true
    },
    {
      "name": "log-level",
      "alias": "l",
      "description": "Display logs in the console. The possible values are `silent`, `error`, `warn`, `info`, `debug`. Any logs of a higher level than the setting are shown. If you define it as `info`, it will show `warn` and `error` outputs also",
      "defaultValue": "info",
      "type": "String",
      "typeLabel": "string",
      "show": true
    },
    {
      "name": "silent",
      "alias": "S",
      "description": "Set `log-level` to `silent` mode",
      "type": "Boolean",
      "show": true
    },
    {
      "name": "verbose",
      "alias": "V",
      "description": "Set `log-level` to `debug` mode",
      "type": "Boolean",
      "show": true
    },


    {
      "name": "no-cache",
      "description": "Disabled the caching files in the browser",
      "type": "Boolean",
      "show": true
    },
    {
      "name": "no-port-scan",
      "description": "Disabled the port scanning when the selected port is already in use",
      "type": "Boolean",
      "show": true
    },
    {
      "name": "cors",
      "alias": "C",
      "description": "Setup CORS headers to allow requests from any origin",
      "type": "Boolean",
      "show": true
    },
    {
      "name": "directory-index",
      "alias": "d",
      "description": "The index file of a directory. Set to false to always show the directory listing",
      "defaultValue": "index.html",
      "type": "String",
      "typeLabel": "file",
      "validations": "isFileName",
      "show": true
    },
    {
      "name": "open",
      "alias": "o",
      "description": "Open browser window after starting the server",
      "type": "Boolean",
      "show": true
    },
    {
      "name": "no-listing",
      "description": "Turn off the directory listings",
      "type": "Boolean",
      "show": true
    },
    {
      "name": "no-notifications",
      "description": "Suppress automatic notifications launching",
      "type": "Boolean",
      "show": true
    },
    {
      "name": "browser",
      "alias": "b",
      "description": "Specify browser to use instead of system default",
      "type": "String",
      "typeLabel": "string",
      "show": true
    },


    {
      "name": "auth",
      "alias": "a",
      "description": "Enables http-auth using the `PAGES_USER` and `PAGES_PASSWORD` environment variables",
      "type": "Boolean",
      "show": true
    },
    {
      "name": "unzipped",
      "alias": "u",
      "description": "Disable GZIP compression",
      "type": "Boolean",
      "show": true
    },
    {
      "name": "no-clipboard",
      "description": "Don't copy address to clipboard",
      "type": "Boolean",
      "show": true
    },




    {
      "name": "ignore",
      "alias": "i",
      "description": "Files and directories to ignore",
      "show": true
    },


    {
      "name": "help",
      "alias": "h",
      "description": "Output usage information",
      "type": "Boolean",
      "show": true
    },
    {
      "name": "version",
      "alias": "v",
      "description": "Output the version number",
      "type": "Boolean",
      "show": true
    },
    {
      "name": "dry-test",
      "description": "",
      "type": "Boolean",
      "show": false
    }

  ]
}
