{
  "name": "html-pages",
  "title": "HTML Pages",
  "description": "Simple development http server for file serving and directory listing made by a Designer. Use it for hacking your HTML/JavaScript/CSS files, but not for deploying your final site.",
  "version": "1.0.0",
  "files": [
    "bin",
    "lib",
    "json",
    "public",
    "views",
    "LICENSE.md",
    "README.md",
    "package.json"
  ],
  "main": "./lib/api.js",
  "bin": {
    "html-pages": "./bin/index.js"
  },
  "engines": {
    "node": ">=6.6.0"
  },
  "author": {
    "name": "Daniel Cardoso",
    "email": "npm@danielcardoso.net",
    "url": "http://www.github.com/danielcardoso"
  },
  "homepage": "https://github.com/danielcardoso/html-pages#readme",
  "bugs": {
    "url": "https://github.com/danielcardoso/html-pages/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/danielcardoso/html-pages.git"
  },
  "keywords": [
    "now",
    "http-server",
    "html",
    "front-end",
    "development",
    "tool",
    "http",
    "cli",
    "dev",
    "web",
    "tool",
    "cors",
    "mime",
    "rest",
    "static",
    "file",
    "server"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "js-style-linter": "semistandard --verbose | snazzy",
    "generate-example": "node ./lib/generate-files.js"
  },
  "lint-staged": {
    "*.js": [
      "npm run js-style-linter",
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "semistandard": {
    "ignore": ["public/", "example/"],
    "parser": "babel-eslint"
  },
  "devDependencies": {
    "semistandard": "*",
    "snazzy": "7.0.0",
    "babel-eslint": "7.2.2",
    "husky": "0.13.3",
    "lint-staged": "3.4.0",
    "prettier": "0.22.0"
  },
  "dependencies": {
    "args": "2.4.2",
    "basic-auth": "1.1.0",
    "bluebird": "3.5.0",
    "boxen": "1.0.0",
    "chalk": "1.1.3",
    "clipboardy": "1.1.0",
    "dargs": "5.1.0",
    "detect-port": "1.1.1",
    "file-exists": "3.0.2",
    "filesize": "3.5.6",
    "fs-extra": "2.1.2",
    "fs-promise": "2.0.2",
    "handlebars": "4.0.6",
    "ignore": "3.2.7",
    "ip": "1.1.5",
    "micro": "7.3.1",
    "micro-compress": "1.0.0",
    "mime-types": "2.1.15",
    "moment": "2.18.1",
    "node-notifier": "5.1.2",
    "node-version": "1.0.0",
    "object-assign": "4.1.1",
    "path-type": "2.0.0",
    "send": "0.15.1",
    "underscore": "1.8.3",
    "update-notifier": "2.1.0"
  }
}
