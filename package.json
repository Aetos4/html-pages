    "handlebars": "4.0.10",
    "ignore": "3.3.5",
    "ip": "1.1.5",
    "lodash": "4.17.4",
    "micro": "9.0.0",
    "micro-compress": "1.0.0",
    "mime-types": "2.1.17",
    "moment": "2.18.1",
    "node-notifier": "5.1.2",
    "node-version": "1.1.0",
    "opn": "5.1.0",
    "path-type": "3.0.0",
    "performance-now": "2.1.0",
    "send": "0.16.1",
    "thread-sleep": "2.0.0",
    "update-notifier": "2.2.0",
    "validator": "9.0.0"
  }
